{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "paths": {
      "@app/cars": [
        "libs/cars/src"
      ],
      "@app/cars/*": [
        "libs/cars/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}